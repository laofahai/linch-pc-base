{
  "name": "linch-base-monorepo",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter playground dev",
    "dev:tauri": "pnpm --filter playground tauri:dev",
    "build": "pnpm --filter @linch-tech/desktop-core build",
    "build:all": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version && pnpm sync-versions",
    "release": "pnpm build:all && changeset publish",
    "sync-versions": "node scripts/sync-versions.mjs"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "~5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
